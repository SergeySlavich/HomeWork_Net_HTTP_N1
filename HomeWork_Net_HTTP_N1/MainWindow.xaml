<Window x:Class="HomeWork_Net_HTTP_N1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork_Net_HTTP_N1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Content="Источник:"/>
            <TextBox Text="https://openweathermap.org/api"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="После нажатия кнопки посмотрим погоду в городе:"/>
            <TextBox x:Name="yourLocation" Text="Moscow" VerticalAlignment="Center"/>
            <Button x:Name="weather" Content="Посмотреть погоду" Click="weather_Click"/>
        </StackPanel>
        <TextBlock x:Name="TextBlock" Text=" Здесь будет погода"/>
    </StackPanel>
</Window>
